@model NK_EMPWeb.Models.EmployeeManagement.Emp_ClientMasterDetailsModels

@{
    ViewBag.Title = "CreateNewClient";
}
@section style
{
    <link href="~/assets/plugins/select2/css/select2.min.css" rel="stylesheet">
}
<div class="breadcrumb-header justify-content-between">
    <div class="my-auto">
        <div class="d-flex">
            <h4 class="content-title mb-0 my-auto">Employee Mangment</h4><span class="text-muted mt-1 tx-13 ml-2 mb-0">/ Add New Client</span>
        </div>
    </div>
</div>
<!-- breadcrumb -->
<!-- row -->
<div class="row">
    <div class="col-xl-12 col-lg-12">
        <!--Dashboard Code start-->
        <div class="card mg-b-20">
            <div class="custom-card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="card-body">
                            <div class="row row-sm">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="ClientName">Client Name</label>
                                        @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control", @id = "ClientName", @placeholder = "Enter Client Name" } })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="Contact">Contact</label>
                                        @Html.EditorFor(model => model.ClientContact, new { htmlAttributes = new { @class = "form-control", @id = "Contact", @placeholder = "Enter Contact" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        @Html.EditorFor(model => model.ClientAddress, new { htmlAttributes = new { @class = "form-control", @id = "address", @placeholder = "Enter Address" } })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        @Html.EditorFor(model => model.ClientCity, new { htmlAttributes = new { @class = "form-control", @id = "city", @placeholder = "Enter City" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="state">State</label>
                                        @Html.EditorFor(model => model.ClientState, new { htmlAttributes = new { @class = "form-control", @id = "state", @placeholder = "Enter State" } })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="">Country</label>
                                        <select class="form-control select2">
                                            <option label="Choose Country">
                                            </option>
                                            @foreach (NK_EMPWeb.Models.EmployeeManagement.Emp_CountryModels country in (List<NK_EMPWeb.Models.EmployeeManagement.Emp_CountryModels>)ViewBag.country)
                                            {
                                                <option value="@country.ID">
                                                    @country.CountryName
                                                </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="designation">Designation</label>
                                        @Html.EditorFor(model => model.ClientDesignation, new { htmlAttributes = new { @class = "form-control", @id = "designation", @placeholder = "Enter designation" } })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="mailID">Email ID</label>
                                        @Html.EditorFor(model => model.ClientMailID, new { htmlAttributes = new { @class = "form-control", @id = "mailID", @placeholder = "Enter Email ID" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="gstNo">GST No</label>
                                        @Html.EditorFor(model => model.ClientGSTNO, new { htmlAttributes = new { @class = "form-control", @id = "gstNo", @placeholder = "Enter GST No" } })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="panCardno">PAN Card No</label>
                                        @Html.EditorFor(model => model.ClientPanCardNo, new { htmlAttributes = new { @class = "form-control", @id = "panCardno", @placeholder = "Enter PAN Card No" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="uploadFile">Upload Document</label>
                                        <div class="custom-file">
                                            <input class="custom-file-input" id="uploadFile" type="file"> <label class="custom-file-label" for="uploadFile">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="remark">Remark</label>
                                        @Html.EditorFor(model => model.ClientRemark, new { htmlAttributes = new { @class = "form-control", @id = "remark", @placeholder = "Enter Remark" } })
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm text-center justify-content-center">
                                <div class="col-sm-6 col-md-3 mg-t-10">
                                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                                </div>
                                <div class="col-sm-6 col-md-3 mg-t-10">
                                    <button type="button" onclick="back()" class="btn btn-light btn-block">Cancel</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!--Dashboard Code End-->
    </div>
</div>
<!-- row closed -->


@section scripts
{
    <script src="~/assets/plugins/select2/js/select2.min.js"></script>
    <script src="~/assets/js/select2.js"></script>
    <script src="~/Scripts/Angular/EmployeeManagement/Services/ClientMasterServices.js"></script>
}